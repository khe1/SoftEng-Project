<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
<TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
                >

            <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:tabStripEnabled="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:background="#00ccff"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/sort_by_type"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" >

                    </TextView>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:background="#bbbbbb"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/sort_by_topic"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" >

                    </TextView>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="48dp"
                        android:background="#bbbbbb"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/sort_by_chapter"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" >

                    </TextView>

                    <TextView
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:background="#bbbbbb"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="@string/test"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" >
                    </TextView>
                </TabWidget>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ScrollView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >


                    <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:orientation="vertical">

	                    <LinearLayout
                            android:id="@+id/pendulum"
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="pendulumClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/pendulum"
	                            android:textColor="#000000"
	                            android:textSize="20sp">

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
                                android:layout_gravity="right"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon">

	                        </ImageView>
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="elasticCollisionsClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/elastic_collisions"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>

	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="projectileMotionClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/projectile_motion"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="ropePulleyClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/ropes_and_pulleys"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:onClick="circularMotionClick"
                            android:clickable="true">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/circular_motion"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="energyConservationClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/energy_conservation"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

	                    <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="workClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/work"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

	                   <LinearLayout
	                        android:layout_width="match_parent"
	                        android:layout_height="35dp"
	                        android:orientation="horizontal"
	                        android:background="@drawable/customborder"
                            android:clickable="true"
                            android:onClick="frictionClick">

	                        <TextView
	                            android:layout_width="280dp"
	                            android:layout_height="match_parent"
	                            android:gravity="center_vertical"
	                            android:text="@string/friction"
	                            android:textColor="#000000"
	                            android:textSize="20sp" >

	                        </TextView>

	                        <ImageView
	                            android:layout_width="match_parent"
	                            android:layout_height="match_parent"
	                            android:contentDescription="@string/arrow"
	                            android:scaleType="centerInside"
	                            android:src="@drawable/arrowicon" >

	                        </ImageView>
	                    </LinearLayout>

                    </LinearLayout>

                </ScrollView>

                <TextView
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </TextView>

                <TextView
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </TextView>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
